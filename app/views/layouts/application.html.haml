!!!
%html
  %head
    %title 
      OnlineTimesheets - #{@title || "Unbenannt"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #container
      #header
        %h1 Meine Stundenzettel
      #content
        - if flash[:notice]
          %p{:class => "alert alert-success"}
            = flash[:notice]
        - if flash[:alert]
          %p{:class => "alert"}
            = flash[:alert]
        = yield
      #footer
        - if user_signed_in?
          = link_to t("links.logout"), logout_path, method: :delete
        - else
          = link_to t("links.login"), login_path