%h2= "Log in"
= form_tag sessions_path do
  %p
    = label_tag :firstname, "Vorname"
    = text_field_tag :firstname, params[:firstname]
  %p
    = label_tag :lastname, "Nachname"
    = text_field_tag :lastname, params[:lastname]
  %p
    = label_tag :password, "Passwort"
    = password_field_tag :password
  %p= submit_tag "Log in"
= link_to "Neuen Benutzer anlegen", new_user_path